                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                  {{#each usuarios}}
                        <tr>
                            <td>{{_id}}</td>
                            <td>{{device}}</td>
                            <td>
                                <form action="/usuario/delete/{{_id}}?_method=DELETE" method="post">
